<%= simple_form_for(@bike) do |f| %>
    <%= f.input :name %>
    <%= f.input :brand %>
    <%= f.input :description %>
    <%= f.input :status, collection: Bike.statuses.keys %>
    <%= f.input :frame %>
    <%= f.input :fork %>
    <%= f.input :tire_max_width %>
    <%= f.input :equipment %>
    <%= f.input :front_speeds %>
    <%= f.input :cassette_speeds %>
    <%= f.input :brake %>
    <%= f.input :brake_type %>
    <%= f.input :handlebar %>
    <%= f.input :handlebar_type %>
    <%= f.input :seat %>
    <%= f.input :wheel_rims %>
    <%= f.input :wheel_hubs %>
    <%= f.input :wheel_tires %>
    <%= f.input :lights %>
    <%= f.input :fenders %>
    <%= f.input :rack %>
    <%= f.input :price %>
    <%= f.input :weight %>
    <%= f.input :weight_capacity %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
<% end %>